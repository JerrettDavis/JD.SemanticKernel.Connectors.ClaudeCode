{
  "metadata": [
    {
      "src": [
        {
          "files": [ "src/**/*.csproj" ],
          "src": ".."
        }
      ],
      "dest": "api",
      "properties": {
        "TargetFramework": "net8.0"
      },
      "includePrivateMembers": false,
      "disableDefaultFilter": false,
      "allowCompilationErrors": false
    }
  ],
  "build": {
    "content": [
      {
        "files": [ "api/**.yml", "api/index.md" ]
      },
      {
        "files": [ "articles/**/*.md", "articles/**/toc.yml", "samples/**/*.md", "samples/**/toc.yml", "toc.yml", "*.md" ]
      }
    ],
    "resource": [
      {
        "files": [ "images/**" ]
      }
    ],
    "output": "_site",
    "template": [ "default", "modern" ],
    "globalMetadata": {
      "_appName": "JD.SemanticKernel.Connectors.ClaudeCode",
      "_appTitle": "JD.SemanticKernel.Connectors.ClaudeCode",
      "_appFooter": "JD.SemanticKernel.Connectors.ClaudeCode — MIT License",
      "_description": "Claude Code session connector for Microsoft Semantic Kernel. Bridges local Claude Code OAuth credentials into any SK application.",
      "_copyright": "Copyright © 2025 JD. Licensed under the MIT License.",
      "_enableSearch": true,
      "_disableContribution": false
    }
  }
}
